@model IEnumerable<storeAdmin.Models.Categoty>

@{
    ViewData["Title"] = "Index";
}

<h1>Category</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New Category</a>
</p>


@foreach (var item in Model)
{
    <div class="card" style="width: 22rem;float:left;margin:5px;margin-bottom:100px;">
        <img src="@Html.DisplayFor(modelItem => item.image)" height="300px" class="card-img-top" alt="...">
        <div class="card-body" style="height:220px">
            <h5 class="card-title">@Html.DisplayNameFor(model => model.name): @Html.DisplayFor(modelItem => item.name)</h5>
            <details>
                <summary>Show description</summary>
                <p class="card-text">@Html.DisplayFor(modelItem => item.description)</p>
            </details>

            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a>
            <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.id">Delete</a>
            <a class="btn btn-outline-primary" asp-controller="Products" asp-action="getProductById" asp-route-name="@item.name" asp-route-id="@item.id">all @item.name</a>
        </div>
    </div>

}